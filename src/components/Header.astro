---
import LogoMobile from "../assets/logo-mobile.svg";
import LogoDesktop from "../assets/logo-desktop.svg";
import BurgerButton from "../components/BurgerButton.astro";
import { Image } from "astro:assets";
import CartButton from "./reactive/CartButton.vue";
---

<header class="Header">
    <div class="Header__content">
        <a href="/">
            <Image
                width="36"
                height="62"
                loading="eager"
                decoding="async"
                class="Header__content__logo-mobile"
                src={LogoMobile}
                alt="Logo"
            />
            <Image
                width="184"
                height="88"
                loading="eager"
                decoding="async"
                class="Header__content__logo-desktop"
                src={LogoDesktop}
                alt="Logo"
            />
        </a>
        <div id="BurgerButton" class="Header__content__button">
            <BurgerButton />
        </div>
        <nav id="Navigation" class="Header__content__navigation">
            <ul class="Header__content__navigation__list">
                <li
                    class="Header__content__navigation__list__item"
                    id="dropdown-button"
                >
                    <span>Travaux</span>
                    <ul
                        class="Header__content__navigation__list__item__dropdown"
                    >
                        <li
                            class="Header__content__navigation__list__item__dropdown__item"
                        >
                            <a href="/tableaux">Tableaux</a>
                        </li>
                        <li
                            class="Header__content__navigation__list__item__dropdown__item"
                        >
                            <a href="/sculptures">Sculptures</a>
                        </li>
                        <li
                            class="Header__content__navigation__list__item__dropdown__item"
                        >
                            <a href="/pieces">Pièces</a>
                        </li>
                    </ul>
                </li>
                <li class="Header__content__navigation__list__item">
                    <a href="/a-propos">À propos</a>
                </li>
                <li class="Header__content__navigation__list__item">
                    <a href="/contact">Contact</a>
                </li>
                <li class="Header__content__navigation__list__item">
                    <a href="/atelier">L'Atelier</a>
                </li>
                <li class="Header__content__navigation__list__item">
                    <a href="/boutique">Boutique</a>
                </li>
                <li class="Header__content__navigation__list__item">
                    <CartButton client:idle />
                </li>
            </ul>
        </nav>
    </div>
</header>

<style lang="scss">
    .Header {
        padding: 0 2rem;
        max-width: $max-content-width;
        margin: 0 auto;
        &__content {
            display: flex;
            padding-top: 1rem;
            justify-content: space-between;
            align-items: center;
            &__logo-mobile,
            &__logo-desktop,
            &__button {
                z-index: 101;
            }
            &__logo-mobile {
                display: block;
            }
            &__logo-desktop {
                display: none;
            }
            &__navigation {
                position: absolute;
                height: 100%;
                width: 100%;
                top: 0;
                left: 0;
                display: flex;
                justify-content: center;
                align-items: center;
                background-color: $background-color;
                z-index: 100;
                transform: translateY(-100%);
                transition:
                    transform 0.3s,
                    opacity 0.5s;
                opacity: 0;
                &__list {
                    &__item {
                        font-size: 1.2rem;
                        margin: 2rem 0;
                        transition:
                            transform 0.3s ease,
                            opacity 0.5s ease;
                        opacity: 0;
                        transform: translateX(100%);
                        transition-delay: 0.3s;
                        z-index: 100;
                        &:hover {
                            text-decoration: underline;
                        }
                        &:nth-child(1) {
                            position: relative;
                            
                            span {
                                display: none;
                            }
                        }
                        &:nth-child(2) {
                            transition-delay: 0.4s;
                        }
                        &:nth-child(3) {
                            transition-delay: 0.5s;
                        }
                        &:nth-child(4) {
                            transition-delay: 0.6s;
                        }
                        &__dropdown {
                            display: flex;
                            flex-direction: column;
                            &__item {
                                font-size: 1.2rem;
                                margin: 0;
                                transition:
                                    transform 0.3s ease,
                                    opacity 0.5s ease;
                                opacity: 0;
                                transform: translateX(100%);
                                transition-delay: 0.3s;

                                a {
                                    text-decoration: none;
                                    color: inherit;
                                    display: block;
                                    width: 100%;
                                    padding: 1rem 0;
                                    
                                    &:hover {
                                        text-decoration: underline;
                                    }
                                }
                                
                                &:nth-child(1) {
                                    transition-delay: 0.35s;
                                }
                                &:nth-child(2) {
                                    transition-delay: 0.4s;
                                }
                                &:nth-child(3) {
                                    transition-delay: 0.45s;
                                }
                            }
                        }
                    }
                }
            }
        }
    }

    .is-active {
        transform: translate(0) !important;
        opacity: 1;
    }

    @media screen and (min-width: $large-screen) {
        .Header {
            &__content {
                &__logo-mobile {
                    display: none;
                }
                &__logo-desktop {
                    display: block;
                }
                &__button {
                    display: none;
                }
                &__navigation {
                    position: initial;
                    height: initial;
                    transform: translateX(0);
                    opacity: 1;
                    width: 100%;
                    justify-content: flex-end;
                    &__list {
                        display: flex;
                        &__item {
                            opacity: 1;
                            width: max-content;
                            transform: translateX(0);
                            &:not(:first-child) {
                                padding-left: 3rem;
                            }
                            &:nth-child(1) {
                                border: none !important;
                                cursor: pointer;

                                span {
                                    display: inline-flex !important;
                                    align-items: center;
                                    gap: 0.5rem;
                                    position: relative;
                                    &:hover {
                                        text-decoration: underline;
                                    }

                                    &::after {
                                        content: url("/src/assets/down-arrow.svg");
                                        transition: transform 0.3s ease;
                                        width: 12px;
                                        height: 12px;
                                        display: inline-flex;
                                        align-items: center;
                                    }
                                }

                                &.dropdown-open span::after {
                                    transform: rotateX(180deg);
                                }
                            }
                            &__dropdown {
                                position: absolute;
                                top: 100%;
                                left: -1rem;
                                min-width: 200px;
                                background-color: $background-color;
                                border: 1px solid $text-color;
                                border-radius: 8px;
                                padding: 1rem;
                                margin-top: 0.5rem;
                                box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
                                transform: translateY(-10px);
                                opacity: 0;
                                visibility: hidden;
                                transition: all 0.3s ease;
                                z-index: 1000;
                                flex-direction: column;
                                gap: 0;

                                &::before {
                                    content: "";
                                    position: absolute;
                                    top: -9px;
                                    left: 2rem;
                                    width: 0;
                                    height: 0;
                                    border-left: 8px solid transparent;
                                    border-right: 8px solid transparent;
                                    border-bottom: 9px solid $text-color;
                                }

                                &::after {
                                    content: "";
                                    position: absolute;
                                    top: -8px;
                                    left: 2rem;
                                    width: 0;
                                    height: 0;
                                    border-left: 8px solid transparent;
                                    border-right: 8px solid transparent;
                                    border-bottom: 8px solid $background-color;
                                }

                                &__item {
                                    padding: 0.75rem 0;
                                    border-bottom: 1px solid
                                        rgba($text-color, 0.1);
                                    transition: all 0.2s ease;
                                    margin: 0;
                                    font-size: inherit;
                                    opacity: 1;
                                    transform: none;

                                    a {
                                        color: $text-color;
                                        text-decoration: none;
                                        font-weight: 500;
                                        display: block;
                                        padding: 0.25rem 0;
                                        transition: color 0.2s ease;
                                    }

                                    &:hover {
                                        background-color: rgba(
                                            $accent-color,
                                            0.1
                                        );
                                        padding-left: 0.5rem;

                                        a {
                                            color: $accent-color;
                                        }
                                    }

                                    &:last-child {
                                        border-bottom: none;
                                    }
                                }

                                &.is-active {
                                    transform: translateY(0);
                                    opacity: 1;
                                    visibility: visible;
                                }
                            }
                        }
                    }
                }
            }
        }
    }
</style>

<script>
    const burgerButton = document.querySelector("#BurgerButton");
    const navigation = document.querySelector("#Navigation");
    const navItems = navigation?.querySelectorAll(
        ".Header__content__navigation__list__item, .Header__content__navigation__list__item__dropdown__item",
    );
    burgerButton?.addEventListener("click", () => {
        navigation?.classList.toggle("is-active");
        navItems?.forEach((item) => {
            item.classList.toggle("is-active");
        });
    });

    // Dropdown behavior only for desktop
    const dropdownButton = document.querySelector("#dropdown-button");
    const dropdownMenu = document.querySelector(
        ".Header__content__navigation__list__item__dropdown",
    );

    function handleDropdown() {
        if (window.innerWidth >= 992) {
            // Toggle dropdown on click (desktop only)
            dropdownButton?.addEventListener("click", toggleDropdown);
            
            // Close dropdown when clicking outside
            document.addEventListener("click", closeDropdownOutside);
        } else {
            // Remove desktop dropdown behavior on mobile
            dropdownButton?.removeEventListener("click", toggleDropdown);
            document.removeEventListener("click", closeDropdownOutside);
            dropdownMenu?.classList.remove("is-active");
            dropdownButton?.classList.remove("dropdown-open");
        }
    }

    function toggleDropdown(e: Event) {
        e.stopPropagation();
        dropdownMenu?.classList.toggle("is-active");
        dropdownButton?.classList.toggle("dropdown-open");
    }

    function closeDropdownOutside(e: Event) {
        if (!dropdownButton?.contains(e.target as Node)) {
            dropdownMenu?.classList.remove("is-active");
            dropdownButton?.classList.remove("dropdown-open");
        }
    }

    // Initialize and handle resize
    handleDropdown();
    window.addEventListener("resize", handleDropdown);
</script>
