---
import Layout from "../layouts/Layout.astro";
import { Fetcher } from "../utils/fetchUtils.js";

const fetcher = new Fetcher();

// Récupération des données de la page Atelier
let pageData = null;
try {
    pageData = await fetcher.fetchData('/wp-json/wp/v2/pages/30476');
} catch (err) {
    console.error('Erreur lors de la récupération de la page Atelier:', err);
}

// Récupération des cours
let cours = [];
let coursError = null;

try {
    const data = await fetcher.fetchData('/wp-json/wp/v2/cours');
    if (Array.isArray(data) && data.length > 0) {
        cours = data;
    }
} catch (err) {
    coursError = "Impossible de charger les cours pour le moment.";
    console.error('Erreur lors de la récupération des cours:', err);
}
---

<Layout title="Atelier">
    <main class="Atelier">
        <div class="Atelier__infos">
            <div class="Atelier__infos__aside">
                {pageData && pageData.content && pageData.content.rendered ? (
                    <div class="Atelier__infos__topic">
                        <h1 class="Atelier__infos__topic__title" set:html={pageData.title?.rendered || "L'atelier"} />
                        <div
                            class="Atelier__infos__topic__content"
                            set:html={pageData.content.rendered}
                        />
                    </div>
                ) : (
                    <div class="Atelier__infos__topic">
                        <h1 class="Atelier__infos__topic__title">L'atelier</h1>
                        <p class="Atelier__infos__topic__text">
                            Contenu non disponible pour le moment.
                        </p>
                    </div>
                )}
                <div class="Atelier__infos__topic">
                    <ul class="Atelier__infos__topic__list">
                        <li class="Atelier__infos__topic__list__item">
                            <h2
                                class="Atelier__infos__topic__list__item__title"
                            >
                                Adresse
                            </h2>
                            <a
                                href=""
                                class="Atelier__infos__topic__list__item__link"
                                >22 rue du Temple, 24500 Eymet</a
                            >
                        </li>
                        <li class="Atelier__infos__topic__list__item">
                            <iframe
                                src="https://www.openstreetmap.org/export/embed.html?bbox=0.39475679397583013%2C44.665589274560986%2C0.4000139236450196%2C44.66784025254396&layer=mapnik"
                                style="border: 1px solid black"></iframe><br
                            /><small
                                ><a
                                    href="https://www.openstreetmap.org/#map=19/44.666715/0.397385"
                                    >Afficher une carte plus grande</a
                                ></small
                            >
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="Atelier__cours">
            <div class="Atelier__infos__topic">
                <h2 class="Atelier__infos__topic__title">Les cours</h2>
                <p class="Atelier__infos__topic__text">
                    Lorem ipsum dolor sit amet consectetur, adipisicing elit.
                    Facere eos quo ipsa voluptatum, reprehenderit harum sequi
                    laborum, voluptas odio, ipsam debitis tempore animi. Atque
                    quia aliquid eaque necessitatibus. Dolore, tempore?
                </p>
            </div>
            {cours.length > 0 ? (
                <div class="Atelier__infos__formula">
                    {cours.map((item) => (
                        <div class="Atelier__infos__formula__square">
                            <h3 class="Atelier__infos__formula__square__title">
                                {item.title?.rendered || "Cours"}
                            </h3>
                            <h4 class="Atelier__infos__formula__square__price">
                                Tarif : {item.acf?.prix || "N/A"}€
                            </h4>
                            <p class="Atelier__infos__formula__square__text">
                                {item.acf?.description || "Aucune description disponible."}
                            </p>
                        </div>
                    ))}
                </div>
            ) : coursError ? (
                <div class="Atelier__infos__error">
                    <p>{coursError}</p>
                </div>
            ) : (
                <div class="Atelier__infos__empty">
                    <p>Aucun cours disponible pour le moment.</p>
                </div>
            )}
        </div>
        <div class="Atelier__horaires">
            <div class="Atelier__infos__topic">
                <h1 class="Atelier__infos__topic__title">Les horaires</h1>
                <p class="Atelier__infos__topic__text">
                    Mon atelier se situe en Dordogne. J’y élabore tableaux et
                    sculptures mais également une ligne d’objets décoratifs pour
                    l’habitat. Chaque pièce, est réalisée à la main ou tournée
                    au tour. J’apporte un soin particulier à chacune de mes
                    créations: Des pièces uniques ou produites en petites
                    séries. L’atelier est ouvert sur rendez-vous.
                </p>
                <a class="Atelier__infos__topic__link" href="tel:0123456789"
                    >Réservation par téléphone au 012345678</a
                >
            </div>
            <div style="flex: 3"></div>
        </div>
    </main>
</Layout>

<style lang="scss">
    .Atelier {
        max-width: 1200px;
        margin: 0 auto;
        padding: 3rem 1.5rem;

        &__image {
            width: 100%;
            margin-bottom: 3rem;
            height: 400px;
            object-fit: cover;
            border-radius: 4px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        &__infos,
        &__cours,
        &__horaires {
            margin-bottom: 4rem;

            &:last-child {
                margin-bottom: 0;
            }
        }

        &__infos {
            &__topic {
                margin-bottom: 3rem;

                &__title {
                    font-family: $font-family-titles;
                    font-size: 2.5rem;
                    color: $text-color;
                    margin-bottom: 2rem;
                    text-align: center;
                    
                    @media (max-width: 768px) {
                        font-size: 2rem;
                    }
                }

                &__text {
                    font-family: $font-family-text;
                    font-size: 1.125rem;
                    line-height: 1.8;
                    color: $text-color;
                    text-align: justify;
                    margin-bottom: 0;
                    
                    @media (max-width: 768px) {
                        font-size: 1rem;
                        text-align: left;
                    }
                }
                
                &__content {
                    font-family: $font-family-text;
                    color: $text-color;
                    line-height: 1.8;
                    
                    :global(h2) {
                        font-family: $font-family-titles;
                        font-size: 1.5rem;
                        color: $accent-color;
                        margin-top: 2rem;
                        margin-bottom: 1rem;
                    }
                    
                    :global(p) {
                        font-size: 1.125rem;
                        margin-bottom: 1rem;
                        text-align: justify;
                        
                        @media (max-width: 768px) {
                            font-size: 1rem;
                            text-align: left;
                        }
                    }
                    
                    :global(figure) {
                        margin: 1.5rem 0;
                        
                        &.wp-block-image {
                            text-align: center;
                        }
                    }
                    
                    :global(img) {
                        max-width: 100%;
                        height: auto;
                        border-radius: 4px;
                        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
                    }
                }

                &__link {
                    display: inline-block;
                    background: $accent-color;
                    color: white;
                    font-family: $font-family-text;
                    text-decoration: none;
                    padding: 1rem 2.5rem;
                    border-radius: 4px;
                    font-weight: 600;
                    margin-top: 2rem;
                    transition: opacity 0.2s ease;
                    text-align: center;
                    width: 100%;
                    box-sizing: border-box;

                    &:hover {
                        opacity: 0.85;
                    }
                    
                    &:active {
                        opacity: 0.7;
                    }
                }

                &__list {
                    display: flex;
                    flex-direction: column;
                    gap: 2rem;

                    &__item {
                        h2 {
                            font-family: $font-family-titles;
                            font-size: 1.25rem;
                            color: $accent-color;
                            margin-bottom: 0.5rem;
                        }

                        a {
                            font-family: $font-family-text;
                            font-size: 1.125rem;
                            color: $text-color;
                            text-decoration: none;

                            &:hover {
                                color: $accent-color;
                            }
                        }

                        iframe {
                            width: 100%;
                            height: 400px;
                            border: none;
                            border-radius: 4px;
                            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
                        }
                        
                        small {
                            font-family: $font-family-text;
                            color: $text-color;
                            opacity: 0.7;
                            
                            a {
                                color: $accent-color;
                                font-size: inherit;
                                
                                &:hover {
                                    text-decoration: underline;
                                }
                            }
                        }
                    }
                }
            }

            &__formula {
                display: grid;
                gap: 3rem;
                margin-top: 3rem;

                &__square {
                    padding: 2rem;
                    border-left: 3px solid $accent-color;

                    &__title {
                        font-family: $font-family-titles;
                        font-size: 1.5rem;
                        color: $accent-color;
                        margin-bottom: 1rem;
                        line-height: 1.3;
                    }

                    &__price {
                        font-family: $font-family-text;
                        font-size: 1.125rem;
                        font-weight: 600;
                        color: $text-color;
                        margin-bottom: 1.5rem;
                    }

                    &__text {
                        font-family: $font-family-text;
                        font-size: 1rem;
                        line-height: 1.8;
                        color: $text-color;
                        text-align: justify;
                        
                        @media (max-width: 768px) {
                            text-align: left;
                        }
                    }
                }
            }
            
            &__error,
            &__empty {
                margin-top: 2rem;
                padding: 2rem;
                text-align: center;
                background: rgba(0, 0, 0, 0.03);
                border-radius: 4px;
                
                p {
                    font-family: $font-family-text;
                    color: $text-color;
                    opacity: 0.8;
                    margin: 0;
                }
            }
        }
    }

    @media screen and (min-width: 768px) {
        .Atelier {
            &__image {
                height: 500px;
            }

            &__infos {
                &__topic {
                    &__link {
                        width: auto;
                    }
                }

                &__formula {
                    grid-template-columns: 1fr 1fr;
                }
            }
        }
    }

    @media screen and (min-width: 992px) {
        .Atelier {
            &__image {
                height: 600px;
            }
        }
    }
</style>
