---
import AddToCartButton from "../../components/reactive/AddToCartButton.vue";
import ProductCarrousel from "../../components/reactive/ProductCarrousel.vue";
import Layout from "../../layouts/Layout.astro";
import Sample from "../../assets/image-sample.webp";
import { Fetcher } from "../../utils/fetchUtils.js";

const { product } = Astro.params;

const fetchComponent = new Fetcher();

let item = null;
let fetchError = null;

try {
    const data = await fetchComponent.fetchData(
        "wp-json/wc/v3/products?slug=" + product,
    );
    if (!Array.isArray(data) || data.length === 0) {
        fetchError = "Ce produit n'existe pas ou n'est plus disponible.";
    } else {
        item = data[0];
        // Vérification du poids
        if (!item.weight || item.weight === null) {
            item.weight = 0;
        }
    }
} catch (err) {
    fetchError = "Une erreur est survenue lors du chargement du produit. Merci de réessayer plus tard.";
}

---

<script>
    // Feedback déplacé dans le composant AddToCartButton.vue
</script>

<Layout>
    <div class="Product">
        {fetchError ? (
            <div class="Product__error">
                <svg width="64" height="64" fill="none" viewBox="0 0 24 24" class="Product__error__icon">
                    <circle cx="12" cy="12" r="10" fill="#ffdddd" />
                    <path d="M9.17 9.17a3 3 0 0 1 5.66 0" stroke="#e57373" stroke-width="1.5" stroke-linecap="round"/>
                    <ellipse cx="9" cy="13.5" rx="1" ry="1.5" fill="#e57373"/>
                    <ellipse cx="15" cy="13.5" rx="1" ry="1.5" fill="#e57373"/>
                </svg>
                <h2 class="Product__error__title">Produit indisponible</h2>
                <p class="Product__error__msg">{fetchError}</p>
                <a href="/boutique" class="Product__error__back">Retour à la boutique</a>
            </div>
        ) : (
        <>
        <div class="Product__container">
            <h1 class="Product__container__title">{item.name}</h1>
            <p class="Product__container__price">{item.price} €</p>
            { item.weight ? <p class="Product__container__weight">{item.weight} kg</p> : null}
            <div class="Product__container__boutons">
                <AddToCartButton
                    id={item.id}
                    name={item.name}
                    image={item.images[0] ? item.images[0].src : Sample.src}
                    price={item.price}
                    weight={item.weight}
                    client:idle
                />
            </div>
            <div class="Product__container__desc" set:html={item.description} />
        </div>
        <div class="Product__carrousel">
            {
                item.images ? (
                    <ProductCarrousel images={item.images} client:idle />
                ) : null
            }
        </div>
        </>
        )}
    </div>
</Layout>

<style lang="scss">
    .Product {
        max-width: 1200px;
        margin: 3rem auto;
        display: flex;
        flex-direction: row-reverse;
        gap: 4rem;
        padding: 3rem 1.5rem;

        &__error {
            padding: 3rem 2rem;
            text-align: center;
            max-width: 600px;
            margin: 4rem auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;

            &__icon {
                display: block;
                margin: 0 auto 1.5rem auto;
            }
            &__title {
                font-family: $font-family-titles;
                color: $text-color;
                font-size: 1.75rem;
                margin-bottom: 1rem;
            }
            &__msg {
                font-family: $font-family-text;
                color: $text-color;
                opacity: 0.8;
                margin: 0 auto 2rem auto;
                line-height: 1.6;
                font-size: 1.125rem;
            }
            &__back {
                font-family: $font-family-text;
                color: white;
                background: $accent-color;
                padding: 1rem 2.5rem;
                border-radius: 4px;
                text-decoration: none;
                font-weight: 600;
                display: inline-block;
                transition: opacity 0.2s ease;
                
                &:hover {
                    opacity: 0.85;
                }
                
                &:active {
                    opacity: 0.7;
                }
            }
        }

        &__container {
            flex: 1;
            max-width: 500px;
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            
            &__title {
                font-size: 2rem;
                font-family: $font-family-titles;
                color: $text-color;
                line-height: 1.3;
                
                @media (max-width: 768px) {
                    font-size: 1.75rem;
                }
            }
            
            &__price {
                font-size: 1.5rem;
                font-family: $font-family-text;
                font-weight: 700;
                color: $accent-color;
            }
            
            &__weight {
                font-size: 1rem;
                font-family: $font-family-text;
                color: $text-color;
                opacity: 0.7;
                font-weight: 500;
            }
            
            &__boutons {
                display: flex;
                flex-direction: column;
                width: 100%;
                gap: 1rem;
                margin: 1rem 0;
            }
            
            &__desc {
                font-family: $font-family-text;
                font-size: 1rem;
                line-height: 1.8;
                color: $text-color;
                text-align: justify;
                
                @media (max-width: 768px) {
                    text-align: left;
                }
            }
        }
        &__carrousel {
            flex: 1;
            
            &__main {
                width: 100%;
                max-width: 600px;
                height: auto;
                object-fit: contain;
                border-radius: 4px;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            }
        }
        
        @media screen and (max-width: 992px) {
            flex-direction: column-reverse;
            justify-content: flex-start;
            align-items: center;
            gap: 2rem;
            padding: 2rem 1.5rem;
            
            &__container {
                max-width: 100%;
            }
        }
    }
</style>

<style lang="scss" is:global>
    .Product {
        &__container {
            &__desc {
                display: flex;
                flex-direction: column;
                gap: 1rem;
            }
        }
    }
</style>
