---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/reactive/ContactForm.vue";
import { Fetcher } from "../utils/fetchUtils.js";

const fetcher = new Fetcher();

// Récupération des données de la page Contact
let pageData = null;
try {
    pageData = await fetcher.fetchData('/wp-json/wp/v2/pages/30550');
} catch (err) {
    console.error('Erreur lors de la récupération de la page Contact:', err);
}
---

<Layout title="Contact">
    <main class="Contact">
        <section class="Contact__infos">
            {pageData && pageData.content && pageData.content.rendered ? (
                <div class="Contact__infos__topic">
                    <h1 class="Contact__infos__topic__title" set:html={pageData.title?.rendered || "Contactez-moi"} />
                    <div
                        class="Contact__infos__topic__content"
                        set:html={pageData.content.rendered}
                    />
                </div>
            ) : (
                <div class="Contact__infos__topic">
                    <h1 class="Contact__infos__topic__title">Contactez-moi</h1>
                    <p class="Contact__infos__topic__text">
                        Contenu non disponible pour le moment.
                    </p>
                </div>
            )}
            <div class="Contact__infos__topic">
                <ul class="Contact__infos__topic__list">
                    <li class="Contact__infos__topic__list__item">
                        <h2 class="Contact__infos__topic__list__item__title">
                            Téléphone
                        </h2>
                        <a
                            href="tel:0123456789"
                            class="Contact__infos__topic__list__item__link"
                            >0123456789</a
                        >
                    </li>
                    <li class="Contact__infos__topic__list__item">
                        <h2 class="Contact__infos__topic__list__item__title">
                            E-mail
                        </h2>
                        <a
                            href="mailto:contact@laure-ferrando.com"
                            class="Contact__infos__topic__list__item__link"
                            >contact@laure-ferrando.com</a
                        >
                    </li>
                    <li class="Contact__infos__topic__list__item">
                        <h2 class="Contact__infos__topic__list__item__title">
                            Adresse
                        </h2>
                        <a
                            href=""
                            class="Contact__infos__topic__list__item__link"
                            >22 rue du Temple, 24500 Eymet</a
                        >
                    </li>
                </ul>
            </div>
            <div class="Contact__infos__topic">
                <iframe
                    src="https://www.openstreetmap.org/export/embed.html?bbox=0.39475679397583013%2C44.665589274560986%2C0.4000139236450196%2C44.66784025254396&layer=mapnik"
                    style="border: 1px solid black"></iframe><br /><small
                    ><a
                        href="https://www.openstreetmap.org/#map=19/44.666715/0.397385"
                        >Afficher une carte plus grande</a
                    ></small
                >
            </div>
        </section>
        <ContactForm client:load />
    </main>
</Layout>

<style lang="scss">
    .Contact {
        max-width: $max-content-width;
        margin: 0 auto;
        padding: 3rem 1.5rem;

        &__infos {
            margin-bottom: 4rem;

            &__topic {
                margin-bottom: 3rem;

                &:last-child {
                    margin-bottom: 0;
                }

                iframe {
                    width: 100%;
                    height: 400px;
                    border: none;
                    border-radius: 4px;
                    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
                }

                small {
                    font-family: $font-family-text;
                    color: $text-color;
                    opacity: 0.7;
                    
                    a {
                        color: $accent-color;
                        text-decoration: none;
                        
                        &:hover {
                            text-decoration: underline;
                        }
                    }
                }

                &__title {
                    font-family: $font-family-titles;
                    font-size: 2.5rem;
                    color: $text-color;
                    margin-bottom: 2rem;
                    
                    @media (max-width: 768px) {
                        font-size: 2rem;
                    }
                }

                &__text {
                    font-family: $font-family-text;
                    font-size: 1.125rem;
                    line-height: 1.8;
                    color: $text-color;
                    text-align: justify;
                    margin-bottom: 0;
                    
                    @media (max-width: 768px) {
                        font-size: 1rem;
                        text-align: left;
                    }
                }
                
                &__content {
                    font-family: $font-family-text;
                    color: $text-color;
                    line-height: 1.8;
                    
                    :global(h2) {
                        font-family: $font-family-titles;
                        font-size: 1.5rem;
                        color: $accent-color;
                        margin-top: 2rem;
                        margin-bottom: 1rem;
                    }
                    
                    :global(p) {
                        font-size: 1.125rem;
                        margin-bottom: 1rem;
                        text-align: justify;
                        
                        @media (max-width: 768px) {
                            font-size: 1rem;
                            text-align: left;
                        }
                    }
                    
                    :global(figure) {
                        margin: 1.5rem 0;
                        
                        &.wp-block-image {
                            text-align: center;
                        }
                    }
                    
                    :global(img) {
                        max-width: 100%;
                        height: auto;
                        border-radius: 4px;
                        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
                    }
                }

                &__list {
                    display: flex;
                    flex-direction: column;
                    gap: 2rem;

                    &__item {
                        &__title {
                            font-family: $font-family-titles;
                            font-size: 1.25rem;
                            color: $accent-color;
                            margin-bottom: 0.5rem;
                        }

                        &__link {
                            font-family: $font-family-text;
                            font-size: 1.125rem;
                            color: $text-color;
                            text-decoration: none;
                            
                            &:hover {
                                color: $accent-color;
                            }
                        }
                    }
                }
            }
        }
    }

    @media screen and (min-width: 768px) {
        .Contact {
            &__infos__topic__list {
                flex-direction: row;
                justify-content: space-between;
                gap: 3rem;
            }
        }
    }

    @media screen and (min-width: 992px) {
        .Contact {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 4rem;
            align-items: start;

            &__infos {
                margin-bottom: 0;
            }
        }
    }
</style>
